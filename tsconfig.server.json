{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "dist/server",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "server/*"
      ]
    },
    "lib": [
      "esnext",
      "ES2019",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": ["server/app.ts"],
  "include": [
    "server/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
